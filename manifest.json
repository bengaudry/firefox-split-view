{
  "manifest_version": 2,
  "name": "Split View Add-on",
  "version": "1.0",
  "description": "Adds a button to open a new tab in a split view.",
  "permissions": [
    "tabs",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "theme"
  ],
  "page_action": {
    "browser_style": true,
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "pinned": true,
    "show_matches": ["http://*/*", "https://*/*", "file://*/*"]
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": ["split-view.html", "split-view.js"]
}
