{
  "manifest_version": 2,
  "name": "Split View Add-on",
  "version": "1.0",
  "description": "Adds a button to open a new tab in a split view.",
  "permissions": [
    "tabs",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "theme"
  ],
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": ["split-view.html", "split-view.js"]
}
