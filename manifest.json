{
  "manifest_version": 2,
  "name": "Split View Add-on",
  "version": "1.0",
  "description": "Adds a button to open a new tab in a split view.",
  "permissions": ["tabs", "activeTab"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  }
}
